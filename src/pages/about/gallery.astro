---
import ChevronLeft from "../../components/icons/ChevronLeft.astro";
import ImageGallery from "../../components/ImageGallery.astro";
import ImagePreview from "../../components/ImagePreview.astro";
import PageLayout from "../../layouts/PageLayout.astro";
import { PICTURES } from "./pictures";

const meta = {
  title: "Gallery | About | Francisco Diaz Paccot",
  description: "Francisco Diaz Paccot | Software Engineer.",
  logoUrl: "https://i.ibb.co/mFYW5QJ/new-logo-small.webp",
  url: "https://franciscodiazpaccot.dev",
};

const images1 = [
  PICTURES.faroSF,
  PICTURES.graffiti,
  PICTURES.mcSF,
  PICTURES.bridgeAndSculturebnw,
];

const images2 = [
  PICTURES.staFeStreet,
  PICTURES.puestaSolMuelleSF,
  PICTURES.pnaStairs,
  PICTURES.bridgeAtNight,
];

const images3 = [
  PICTURES.gamingKeyboard,
  PICTURES.pcPool,
  PICTURES.sfStreetBv,
  PICTURES.meTakingAPhoto,
];
---

<PageLayout {meta} router="/about">
  <section class="py-4 px-2 md:px-4 md:pt-8 md:pb-16">
    <div class="px-4 max-w-2xl mx-auto my-10 md:max-w-7xl">
      <div class="max-w-3xl flex flex-col gap-6">
        <div class="flex gap-1 items-center">
          <ChevronLeft height={20} width={20} />
          <a
            href="/about"
            class="text-white text-sm hover:underline hover:text-orange transition-colors"
          >
            Back to About me
          </a>
        </div>
        <p class="font-semibold text-gray-100 text-3xl eurostile">Gallery</p>
        <div class="flex gap-2 items-center">
          <p class="font-semibold text-gray-300 text-sm eurostile">
            Or you can view it all at
          </p>
          <a
            target="_blank"
            class="cursor-pointer text-gray-300 flex items-center gap-1 hover:underline hover:text-orange transition-colors"
            href="https://www.pexels.com/en-us/@francisco-diaz-paccot-1110691038/gallery/"
          >
            <img
              class="w-6 h-6"
              src="https://www.pexels.com/assets/static/images/meta/pexels-icon.png"
            />
            Pexels
          </a>
        </div>
      </div>
      <div
        class="pt-10 mt-10 flex flex-col gap-16 border-t border-orange-35 md:pt-16 md:mt-16 md:gap-32"
      >
        <ImagePreview>
          <ImageGallery images={images1} borders={{ top: true }} />
          <ImageGallery images={images2} />
          <ImageGallery images={images3} borders={{ bottom: true }} />
        </ImagePreview>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  window.addEventListener("scroll", () => {
    const calculation =
      window.scrollY / (document.body.offsetHeight - window.innerHeight);
    document.body.style.setProperty("--scroll", calculation.toString()), false;
  });
</script>
