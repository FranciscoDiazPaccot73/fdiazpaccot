---
import PageLayout from '../layouts/PageLayout.astro';
import Home from '../components/Home.astro';
import About from '../components/About.astro';
import Card from '../components/Card.astro';
import Projects from '../components/Projects.astro';

const meta = {
	title: 'Francisco Diaz Paccot',
	description: 'Francisco Diaz Paccot | Frontend Software Engineer.',
	logoUrl: "https://i.ibb.co/mFYW5QJ/new-logo-small.webp",
	url: "https://franciscodiazpaccot.dev",
}
---

<PageLayout {meta} router="/">
	<Home />
	<About />
	{false && <Card />}
	<Projects />
</PageLayout>

<script>
	window.addEventListener('scroll', () => {
    const element = document.getElementById('about-section-home')
		if (window.pageYOffset >= 75 && !element.classList.contains('orange-background')) {
			element.classList.add('orange-background')
		}
		
		if (window.pageYOffset < 75) {
			element.classList.remove('orange-background')
		}
  })
</script>
