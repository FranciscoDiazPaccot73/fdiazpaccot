<style>
  .letter {
    align-items: center;
    background: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.3);
    flex-direction: column;
    margin: 26px auto 0;
    max-width: 550px;
    min-height: 300px;
    padding: 4rem 3rem;
    position: relative;
    width: 80%;
  }
  .letter:before, .letter:after {
    content: "";
    height: 98%;
    position: absolute;
    width: 100%;
    z-index: -1;
  }
  .letter:before {
    background: #fafafa;
    box-shadow: 0 0 8px rgba(0,0,0,0.2);
    left: -5px;
    top: 4px;
    transform: rotate(-2.5deg);
  }
  .letter:after {
    background: #f6f6f6;
    box-shadow: 0 0 3px rgba(0,0,0,0.2);
    right: -3px;
    top: 1px;
    transform: rotate(1.4deg);
  }
</style>
