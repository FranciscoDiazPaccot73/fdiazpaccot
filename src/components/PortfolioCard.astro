---
import { Image } from '@astrojs/image/components';
import Github from './icons/Github.astro';

const { link, text, logoUrl, stack, description, logoWidth, logoHeight, id, github } = Astro.props;
---

<div id={id ?? ''} class="w-full mb-10 flex relative flex-col items-center p-4 rounded-xl justify-center border orange-border black-background">
  <div>
    <a href={link} target="_blank" class="flex w-full flex-col items-center justify-center mb-4">
      <Image width={logoWidth} height={logoHeight} format="webp" src={logoUrl} alt={text} />
      <span class="text-sm underline underline-offset-1 orange-text">{text}</span>
    </a>
  </div>
  <p class="text-sm">{description}</p>
  <p class="mt-6 text-sm w-full"><strong>Stack: </strong>{stack}</p>
  {github ? <a href={github} target="_blank" class="absolute top-4 right-4"><Github width={32} height={32} color="#e9552f" /></a> : null}
</div>
