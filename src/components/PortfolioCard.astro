---
import { Image } from '@astrojs/image/components';
import Github from './icons/Github.astro';

const { link, text, logoUrl, stack, description, logoWidth, logoHeight, id, github } = Astro.props;
---

<div id={id ?? ''} class="w-full mb-10 flex relative flex-col items-center p-4 rounded-xl justify-center border orange-border md:justify-start black-background">
  <a href={link} target="_blank" class="absolute top-4 left-4"><Image width={logoWidth} height={logoHeight} format="webp" src={logoUrl} alt={text} /></a>
  <div class="flex w-full h-10 flex-col items-center justify-center mb-4 orange-text">
    <span class="font-semibold">{text}</span>
  </div>
  <div class="flex justify-between flex-col h-full md:mt-6">
    <p class="text-sm">{description}</p>
    <ul class="mt-6 text-sm flex gap-2 flex-wrap">
      {stack.map(tec => <li class="px-2 py-1 text-center text-xs uppercase rounded-md orange-background black-text">{tec}</li>)}
    </ul>
  </div>
  {github ? <a href={github} target="_blank" class="absolute top-4 right-4"><Github width={32} height={32} color="#e9552f" /></a> : null}
</div>
