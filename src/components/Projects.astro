---
import ProjectHomeCard from "./ProjectHomeCard.astro";
---

<section
  class="px-8 py-6 relative text-white flex items-center flex-col w-full md:mx-auto md:w-full md:max-w-6xl"
>
  <p class="my-8 text-2xl orange-text font-semibold eurostile">
    Recent Projects
  </p>
  <ul class="w-full md:w-auto md:grid md:gap-6 grid-space">
    {
      /*
      <ProjectHomeCard
        webpage="https://blabi.com.ar/"
        ariaWebpageLabel="Click to go to Blabi webpage"
        imageProps={{
          src: "/blabi-logo.webp",
          alt: "Blabi webpages",
          width: 40,
          height: 40,
        }}
        siteHrefProps={{
          href: "/portfolio#blabi",
          "aria-label": "Blabi info",
        }}
        label="Blabi websites"
        id="blabi"
      />
     */
    }
    <ProjectHomeCard
      webpage="https://blabi.com.ar/"
      ariaWebpageLabel="Click to go to Blabi webpage"
      imageProps={{
        src: "/blabi-logo.webp",
        alt: "Blabi webpages",
        width: 40,
        height: 40,
      }}
      siteHrefProps={{
        href: "/portfolio#blabi",
        "aria-label": "Blabi info",
      }}
      label="Blabi websites"
      id="blabi"
    />
    <ProjectHomeCard
      webpage="https://www.quepuedover.online/"
      ariaWebpageLabel="Click to go to Que Puedo ver? webpage"
      imageProps={{
        src: "/qpv.webp",
        alt: "quepuedover.online",
        width: 90,
        height: 60,
      }}
      githubHref="https://github.com/FranciscoDiazPaccot73/que-mirar"
      githubAriaLabel="Click to go to Que puedo Ver? Github"
      siteHrefProps={{
        href: "/portfolio#quepuedover",
        "aria-label": "Que Puedo Ver?  info",
      }}
      label="Que Puedo Ver?"
      id="qpv"
    />
    <ProjectHomeCard
      webpage="https://markdown.franciscodiazpaccot.dev/"
      ariaWebpageLabel="Click to go to Markdown generator webpage"
      imageProps={{
        src: "/markdown.png",
        alt: "markdown generator",
        width: 60,
        height: 60,
      }}
      githubHref="https://github.com/FranciscoDiazPaccot73/markdown-generator"
      githubAriaLabel="Click to go to Markdown Generator Github"
      siteHrefProps={{
        href: "/portfolio#markdowngen",
        "aria-label": "Markdown Generator info",
      }}
      label="Markdown Generator"
      id="markdown"
    />
  </ul>
  <div class="flex justify-end items-center w-full px-4">
    <a
      href="/portfolio"
      class="inline-flex items-center font-medium text-orange hover:underline"
    >
      See all
      <svg
        class="ml-2 w-4 h-4"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      >
    </a>
  </div>
</section>

<style>
  @media (min-width: 768px) {
    .grid-space {
      grid-template-columns: repeat(2, fit-content(100%));
    }
  }
  @media (min-width: 1020px) {
    .grid-space {
      grid-template-columns: repeat(3, fit-content(100%));
    }
  }
</style>
