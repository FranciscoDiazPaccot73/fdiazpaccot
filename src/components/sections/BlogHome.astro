<section
  class="px-8 py-6 relative text-white flex items-center flex-col w-full md:mx-auto md:w-full md:max-w-6xl"
>
  <div class="pt-8 pb-4 mx-auto max-w-screen-xl lg:pt-16 lg:pb-6 md:px-4">
    <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
      <h2
        class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-orange"
      >
        Blog
      </h2>
      <p class="font-light text-xl text-gray-400">
        Some of my ideas, thoughts and knowledge.
      </p>
    </div>
    <div class="grid gap-8 lg:grid-cols-2">
      {
        blogs.map((blog) => (
          <article class="p-6 bg-orange-25 rounded-lg border border-orange-50 shadow-md">
            <div class="flex justify-end items-center mb-5 text-gray-300">
              <span class="text-sm">{blog.date}</span>
            </div>
            <h2 class="mb-2 text-2xl font-bold tracking-tight text-white">
              <a href="/blog/webpack-stats-file/">{blog.title}</a>
            </h2>
            <p class="mb-5 font-light text-gray-400">{blog.description}</p>
            <div class="flex justify-end items-center">
              <a
                href={blog.link}
                class="inline-flex items-center font-medium text-orange hover:underline"
              >
                Read more
                <svg
                  class="ml-2 w-4 h-4"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
