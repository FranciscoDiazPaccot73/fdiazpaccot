---
import { PICTURES } from "../pages/about/pictures";
import BentoGrid from "./BentoGrid.astro";
import ImagePreview from "./ImagePreview.astro";

const elements = [
  PICTURES.mcSF,
  PICTURES.bridgeAndSculturebnw,
  PICTURES.faroSF,
  PICTURES.graffiti,
];
---

<div
  class="px-8 py-10 mt-10 flex flex-col gap-6 border-t border-orange-35 md:mx-auto md:w-full md:max-w-6xl md:pt-16 md:mt-16"
>
  <div class="flex items-center justify-between">
    <p class="text-2xl font-bold tracking-tight text-orange sm:text-3xl">
      Gallery
    </p>
    <a
      href="/about/gallery"
      class="text-sm font-medium text-orange hover:underline underline-offset-4"
    >
      View all the gallery
    </a>
  </div>
  <p class="text-gray-400 mb-6 md:mb-8 lg:mb-10">
    One of my hobbies is taking pictures. These are some of them.
  </p>
  <ImagePreview client:load>
    <BentoGrid client:load elements={elements} imgCustomClass="preview-image" />
  </ImagePreview>
</div>
